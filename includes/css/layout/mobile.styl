*
  box-sizing border-box

body
  font-family 'Segoe UI', 'Lucida Grande', Ubuntu, Arial, sans-serif
  font-size 15px
  line-height 1

main
  width 90%
  margin 0 auto
  line-height 1.2em

  section
    height 100vh

h1,
h2
  margin 0 0 1em

h1
  font-size 1.5em

h2
  font-size 1.2em

h3
  margin 1em 0 .5em
  font-size 1.3em

img
  max-width 100%
  max-height 100%

#hero
  color $hero-text-color
  text-align center
  margin 10vh 0 0

  &.animated
    animation-delay 300ms
    animation-duration 400ms
    animation-name fade-out
    animation-timing-function linear

  h1,
  h2 span
    opacity 0
    animation-name fade-in

  .branding
    h1
      animation-delay 800ms
      margin .5em 0
      font-size 1.5em

    h2
      margin 0 0 1em

      span
        animation-delay 1.1s

        &:first-child
          animation-delay 1s

        &:last-child
          animation-delay 1.2s
