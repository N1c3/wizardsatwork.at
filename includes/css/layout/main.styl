*
  box-sizing border-box

body
  font-family 'Segoe UI', 'Lucida Grande', Ubuntu, Arial, sans-serif
  font-size 15px
  line-height 1.2

h1,
h2
  margin 0 0 1em

h1
  font-size 1.5em

h2
  font-size 1.2em

h3
  font-size 1.3em
  margin 1em 0 .5em

img
  max-height 100%
  max-width 100%

main
  line-height 1.2
  margin 0 auto
  width 90%

  section
    color $hero-text-color
    margin 10vh 0 0
    min-height 100vh
    text-align center

    &.animated
      animation-delay 300ms
      animation-duration 400ms
      animation-name fade-out
      animation-timing-function linear

    h1,
    h2 span
      animation-name fade-in
      opacity 0

    .branding
      h1
        animation-delay 800ms
        margin .5em 0

      h2
        margin 0 0 1em

        span
          animation-delay 1.1s

          &:first-child
            animation-delay 1s

          &:last-child
            animation-delay 1.2s


.impressum
  font-size .8em
